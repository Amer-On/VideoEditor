<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/main_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="150dp"
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerHorizontal="true">

                <ImageButton
                    android:id="@+id/choose_video_img_button"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background="@color/transp"
                    android:src="@drawable/button_play_video"
                    android:layout_width="72dp"
                    android:layout_height="72dp"/>

                <TextView
                    style="@style/Text"
                    android:textColor="@color/main_white"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/video_edit"
                    android:textAlignment="center"
                    android:textSize="25sp"/>

                <TextView
                    style="@style/Text"
                    android:textColor="@color/main_grey"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/video_edit_desc"
                    android:textAlignment="center"
                    android:textSize="16sp"/>


                <Button
                    style="@style/Text"
                    android:id="@+id/choose_video_button"
                    android:text="@string/choose_video"
                    android:textColor="@color/main_background"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rounded_button"
                    android:textSize="16sp"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- HeadBar -->
        <RelativeLayout
            android:id="@+id/head_bar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@color/transp">

            <TextView
                style="@style/Text"
                android:id="@+id/head_name"
                android:text="@string/title"
                android:textAlignment="center"
                android:textColor="@color/main_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="27sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>